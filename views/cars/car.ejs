<%- include('../includes/head.ejs') %>
<div class="product_adding mtt">
  <form class="row g-3 fs-4" action="/add-product" method="POST">
    <div class="my-5 adding_file">
      <h3 class="mb-4">Rasm qo'shish (maksimal 3ta)</h3>
      <label for="img" class="btn btn-primary p-3">+ Rasm qo'shish</label>
      <input type="file" id="img" class="d-none" multiple />
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="rentOrSell" id="rentOrSell1" value="Arenda" />
      <label class="form-check-label" for="rentOrSell1"> Arendaga </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="rentOrSell" id="rentOrSell2" checked value="Sotiladi" />
      <label class="form-check-label" for="rentOrSell2"> Sotiladi </label>
    </div>
    <div class="col-md-6">
      <label for="shortInfo" class="form-label">Qisqa ta'rif</label>
      <input type="text" class="form-control fs-3" name="shortInfo" maxlength="30" placeholder="Nexia sotiladi" />
    </div>
    <div class="col-md-6">
      <label for="model" class="form-label">Modeli</label>
      <input type="text" class="form-control fs-3" name="model" />
    </div>
    <div class="col-md-6">
      <label for="transmission" class="form-label">Transmissiya turi</label>
      <select class="form-select form-select-lg mb-3 fs-4" aria-label=".form-select-lg example" name="transmission">
        <option value="Mexanika">Mexanika</option>
        <option value="Avtomat">Avtomat</option>
      </select>
    </div>
    <div class="col-md-6">
      <label for="fluel" class="form-label">Yoqilg'i turi</label>
      <select class="form-select form-select-lg mb-3 fs-4" aria-label=".form-select-lg example" name="fluel">
        <option value="Benzin">Benzin</option>
        <option value="Metan">Metan</option>
        <option value="Propan">Propan</option>
      </select>
    </div>
    <div class="col-md-6">
      <label for="color" class="form-label">Rangi</label>
      <select class="form-select form-select-lg mb-3 fs-4" aria-label=".form-select-lg example" name="color">
        <option value="Oq">Oq</option>
        <option value="Qora">Qora</option>
        <option value="Sariq">Sariq</option>
        <option value="Ko'k">Ko'k</option>
        <option value="Qizil">Qizil</option>
        <option value="Yashil">Yashil</option>
        <option value="Kumush rang">Kumush rang</option>
        <option value="Asfalt rang">Asfalt rang</option>
      </select>
    </div>
    <div class="col-md-6">
      <label for="year" class="form-label">Ishlab chiqarilgan yili</label>
      <input type="text" class="form-control fs-3" name="year" />
    </div>
    <div class="col-md-6">
      <label for="kmRun" class="form-label">Yurgan kilometraji</label>
      <input type="text" class="form-control fs-3" name="kmRun" />
    </div>
    <div class="col-md-6">
      <label for="color" class="form-label">Manzilni tanlang</label>
      <select class="form-select form-select-lg mb-3 fs-4" aria-label=".form-select-lg example" name="address">
        <option value="Vodil">Vodil</option>
        <option value="Yoshlarobod">Yoshlarobod</option>
        <option value="Novkent'k">Novkent</option>
        <option value="Yangiobod">Yangiobod</option>
        <option value="Mindonobod">Mindonobod</option>
        <option value="Avval">Avval</option>
        <option value="Kaptarxona">Kaptarxona</option>
        <option value="Log'on">Log'on</option>
        <option value="Mindon">Mindon</option>
        <option value="Chimyon">Chimyon</option>
        <option value="Xonqiz">Xonqiz</option>
        <option value="Oqtom">Oqtom</option>
        <option value="Satkak">Satkak</option>
        <option value="Damko'l">Damko'l</option>
        <option value="Shoximardon">Shoximardon</option>
      </select>
    </div>
    <div class="form-floating fs-4 mb-5">
      <textarea class="form-control fs-3" name="extraInfo" style="height: 70px"></textarea>
      <label for="address">Qo'shimcha ma'lumot</label>
    </div>
    <div class="col-md-6">
      <label for="price" class="form-label">Narxi($):</label>
      <input type="number" class="form-control fs-3" name="price" />
    </div>
    <div class="col-md-6">
      <label for="phoneNumber" class="form-label">Telefon raqamingizni kiriting</label>
      <input type="number" class="form-control fs-3" name="phoneNumber" />
    </div>
    <div>
      <input type="hidden" name="productType" value="car" />
      <button type="submit" class="btn btn-primary fs-4">Qo'shish</button>
    </div>
  </form>
</div>
<%- include('../includes/end.ejs') %>
