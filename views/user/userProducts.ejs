<%- include('../includes/head.ejs') %>
<section class="cards container-lg mts" id="cards">
  <% if(prods.length <= 0) { %>
  <h1 class="text-center">Sizda e'lonlar mavjud emas</h1>
  <% } else { %>
  <div class="box-container user-box-container">
    <% for (let product of prods) { %>
    <div class="box">
      <a href="/products/<%= product._id %>"><img src="/image/blog-1.jpg" alt="" /></a>
      <div class="content p-3">
        <div class="icons pb-4 mb-3">
          <h4 href="#"><%= product.shortInfo %></h4>
          <a href=""> 1st may, 2021 </a>
        </div>
        <h3 class="text-center"><%= product.price%> <%= (product.dollar) ? '$' : "so'm"%></h3>
      </div>
      <div class="card_footer d-flex justify-content-between px-5 py-4">
        <a
          href="/user/edit-product/<%= product._id %>?edit=true&&productType=<%= product.productType %>"
          class="btn btn-success fs-5"
          >O'zartirish</a
        >
        <form method="POST" action="/user/delete/product">
          <input type="hidden" name="productId" value="<%= product._id %>" />
          <button type="submit" class="btn btn-danger fs-5">O'chirish</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
  <% } %>
</section>
<%- include('../includes/end.ejs') %>
