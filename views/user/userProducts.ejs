<%- include('../includes/head.ejs') %>
<section class="cards container-lg" id="cards">
  <% if(prods.length <= 0) { %>
  <h1>E'lonlar mavjud emas</h1>
  <% } else { %>
  <div class="top-products d-flex justify-content-between">
    <h2>Top products</h2>
  </div>
  <div class="box-container">
    <% for (let product of prods) { %> <% for (let p of price) { %>
    <div class="box">
      <a href="/products/<%= product._id %>"><img src="/image/blog-1.jpg" alt="" /></a>
      <div class="content p-3">
        <div class="icons pb-4 mb-3">
          <h4 href="#"><%= product.shortInfo %></h4>
          <a href=""> 1st may, 2021 </a>
        </div>
        <h3 class="text-center"><%= p%> <%= (product.dollar) ? '$' : "so'm"%></h3>
      </div>
      <div class="card_footer d-flex justify-content-between px-5 py-2">
        <h6><i class="fa-solid fa-eye"></i> 15 seen</h6>
        <i class="fa-regular fa-heart fs-4"></i>
      </div>
    </div>
    <% } %> <% } %>
  </div>
  <% } %>
</section>
<%- include('../includes/end.ejs') %>
