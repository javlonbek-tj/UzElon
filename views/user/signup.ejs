<%- include('../includes/head.ejs') %>
<section class="signup container">
  <div class="signup-content text-center">
    <div class="signup-form">
      <h1>Sign up</h1>
      <form method="POST" class="register-form fs-4 mt-5" id="register-form">
        <div class="form-group mb-5">
          <label for="name"><i class="fa-solid fa-user me-4 fs-5"></i></label>
          <input type="text" name="name" id="name" placeholder="Your Name" />
        </div>
        <div class="form-group mb-5">
          <label for="email"><i class="fa-solid fa-envelope me-4 fs-5"></i></label>
          <input type="email" name="email" id="email" placeholder="Your Email" />
        </div>
        <div class="form-group mb-5">
          <label for="pass"><i class="fa-solid fa-lock me-4 fs-5"></i></label>
          <input type="password" name="pass" id="pass" placeholder="Password" />
        </div>
        <div class="form-group">
          <label for="re-pass"><i class="fa-solid fa-lock text-primary me-4 fs-5"></i></label>
          <input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password" />
        </div>
        <div class="form-button mt-5">
          <input type="submit" name="signup" id="signup" class="form-submit py-3 px-5" value="Register" />
        </div>
        <div class="d-flex pt-4 justify-content-center">
          <p class="me-3">Already sign up?</p>
          <a href="/login">Sign in</a>
        </div>
      </form>
    </div>
  </div>
</section>
<%- include('../includes/end.ejs') %>
