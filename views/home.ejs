<%- include('./includes/head.ejs') %>
<div id="nav_carousel" class="carousel slide container-lg mt-5" data-bs-ride="carousel" data-bs-interval="2000">
    <div class="carousel-inner">
      <div class="carousel-item active data-bs-interval="2000"">
        <img src="/image/apple-gcf6decaf6_1920.jpg" class="d-block w-100 h-100" alt="..." />
      </div>
      <div class="carousel-item">
        <img src="/image/ecommerce-gd687d20d9_1280.jpg" class="d-block w-100 h-100" alt="..." />
      </div>
      <div class="carousel-item">
        <img src="/image/shopping-4694470_1920 (1).jpg" class="d-block w-100 h-100" alt="..." />
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#nav_carousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#nav_carousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <section class="home my-5" id="home">
      <div class="home_categories d-flex justify-content-evenly">
        <div class="me-5"><a href="#"><i class="fa-sharp fa-solid fa-house-chimney"> <span>Uy-joy</span></i></a></div>
        <div class="me-5"><a href="#"><i class="fa-sharp fa-solid fa-car"> <span>Avto</span></i></a></div>
        <div class="me-5"><a href="#"><i class="fa-sharp fa-solid fa-laptop"> <span>Elektronika</span></i></a></div>
        <div><a href="#"><i class="fa-sharp fa-solid fa-person"> <span>Ish</span></i></a></div>
      </div>
  </section>

  <!-- products section starts  -->

</section>
<section class="cards container-lg" id="cards">
  <% if(prods.length <= 0) { %>
  <h1 class="text-center">E'lonlar mavjud emas</h1>
  <% } else { %>
  <div class="top-products d-flex justify-content-between">
    <h2>Top products</h2>
  </div>
  <div class="box-container">
    <% for (let product of prods) { %>
    <div class="box">
      <a href="/products/<%= product._id %>"><img src="/image/blog-1.jpg" alt="" /></a>
      <div class="content p-3">
        <div class="info pb-1 mb-3">
          <h4 href="#"><%= product.shortInfo %></h4>
            <p class="text-muted fs-5"> 1st may, 2021 </p>
        </div>
        <h3 class="text-center"><%= product.price %> <%= (product.dollar) ? '$' : "so'm"%></h3>
      </div>
      <div class="card_footer d-flex justify-content-between px-5 py-2">
        <h5 class="me-5 text-secondary"><%= product.address %> </h5>
        <i class="fa-regular fa-heart fs-4"></i>
      </div>
    </div>
    <% } %>
  </div>
  <% } %>
</section>
  
  <%- include('./includes/end.ejs') %>