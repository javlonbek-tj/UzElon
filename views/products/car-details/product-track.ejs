<%- include('../../includes/head.ejs') %>
<section class="mts">
  <div class="container pb-5">
    <div class="row">
      <div class="col-lg-5">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <button
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide-to="0"
              class="active"
              aria-current="true"
              aria-label="Slide 1"
            ></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="/<%= track.imageUrl[0] %>" class="d-block w-100" alt="..." />
            </div>
            <div class="carousel-item">
              <img src="/<%= track.imageUrl[1] %>" class="d-block w-100" alt="..." />
            </div>
            <div class="carousel-item">
              <img src="/<%= track.imageUrl[2] %>" class="d-block w-100" alt="..." />
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <!-- col end -->
      <div class="detail_card col-lg-7">
        <div class="card">
          <div class="card-body">
            <div class="d-md-flex justify-content-between mb-3">
              <h2 class="main_info"><%= track.model %> <%= track.rentOrSell %>, <%= year %>, <%=track.kmRun %> km.</h2>
              <p class="fs-5">E'lon qo'shilgan sana: 2023.01.27 20:39</p>
            </div>
            <p class="h1 py-2"><%= track.price %> $</p>
            <h3 class="main_info mb-5"><%= track.address %></h3>
            <ul class="list-unstyled pb-3 fs-4 details">
              <li><span> Yoqilg'i turi:</span> &nbsp <%= track.fluel %></li>
              <li><span> Yili: </span> &nbsp <%= year %></li>
              <li><span> Yurgan kilometraji: &nbsp</span> <%= track.kmRun %> km</li>
            </ul>
            <h3>Tavsif:</h3>
            <p class="fs-4 mb-5"><%= track.extraInfo %></p>
            <div class="pb-3 d-flex justify-content-evenly details_buttons">
              <button type="submit">+<%= track.phoneNumber %></button>
              <button type="submit">Muallifga yozish</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="cards container-lg" id="cards">
  <div class="top-products d-flex justify-content-between">
    <h2>Related products</h2>
    <a href="/products" class="h4 text-info">All products <i class="fa-solid fa-arrow-right"></i></a>
  </div>
  <div class="box-container">
    <div class="box">
      <a href="#"><img src="../../public/image/blog-1.jpg" alt="" /></a>
      <div class="content p-3">
        <div class="icons d-flex justify-content-between align-items-center pb-4 mb-3">
          <a href="#"> Price: 16$</a>
          <a href="#"> <i class="fas fa-calendar"></i> 1st may, 2021 </a>
        </div>
        <h4 class="text-center">
          fresh and organic <br />
          vegitables and fruits
        </h4>
      </div>
      <div class="card_footer d-flex justify-content-between px-5 pt-2">
        <h5><i class="fa-solid fa-eye fs-5"></i> 15 seen</h5>
        <i class="fa-regular fa-heart fs-4"></i>
      </div>
    </div>
  </div>
</section>
<%- include('../../includes/end.ejs') %>
